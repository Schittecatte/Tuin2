<Window x:Class="DependencyInject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DependencyInject"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="0,0,0.4,-0.2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="26*"/>
        </Grid.ColumnDefinitions>
        <Button Name="btnOnSwitch" Margin="10,10,10.2,20" FontSize="24" Click="btnOnSwitch_Click">On</Button>
        <Button Name="btnOffSwitch" Margin="35.8,0,26,20" FontSize="24" Click="btnOffSwitch_Click" Grid.Column="1">Off</Button>
        <Image   Name="imglight" Grid.Column="2" HorizontalAlignment="Left" Height="301" Margin="10,0,0,0" VerticalAlignment="Top" Width="162"/>


    </Grid>
</Window>
