<Window x:Class="Exmet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exmet"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnLeft" Content="Button" HorizontalAlignment="Left" Margin="135,130,0,0" VerticalAlignment="Top" Width="75" Click="btnLeft_Click"/>
        <Button x:Name="btnRight" Content="Button" HorizontalAlignment="Left" Margin="325,149,0,0" VerticalAlignment="Top" Width="75" Click="btnRight_Click"/>
        <Button x:Name="btnUp" Content="Button" HorizontalAlignment="Left" Margin="255,90,0,0" VerticalAlignment="Top" Width="75" Click="btnUp_Click"/>
        <Button x:Name="btnDown" Content="Button" HorizontalAlignment="Left" Margin="255,185,0,0" VerticalAlignment="Top" Width="75" Height="30" RenderTransformOrigin="0.5,0.5" Click="btnDown_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="-183.49"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
